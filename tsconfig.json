{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/lib/db": ["./node_modules/@hit/feature-pack-stubs/dist/db"],
      "@/lib/hit-config.generated": ["./node_modules/@hit/feature-pack-stubs/dist/hit-config"],
      "@/lib/feature-pack-schemas": ["./src/lib-stubs/feature-pack-schemas"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

